<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_airbus_sfumato"
    android:padding="50dip"
    tools:context="com.aidilab.airbus.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/categoriesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp" >

        <TextView
            android:id="@+id/categoriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dip"
            android:text="@string/categories"
            android:textSize="35dip" />

        <RelativeLayout
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/categoriesTextView" >

            <ListView
                android:id="@+id/categoriesListview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/categoriesLayout"
        android:layout_toRightOf="@+id/categoriesLayout" >

        <TextView
            android:id="@+id/titlesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dip"
            android:text="@string/titles"
            android:textSize="35dip" />

        <RelativeLayout
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/titlesTextView" >

            <ListView
                android:id="@+id/titleListview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:textSize="35dip" />

        <RelativeLayout 
            android:id="@+id/previewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView
	            android:id="@+id/previewView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"/>
            
            <ImageButton
                android:id="@+id/playButton"
	            android:layout_width="300dip"
	            android:layout_height="300dip"
	            android:layout_centerVertical="true"
	            android:layout_centerHorizontal="true"
                android:src="@drawable/playbutton"
                android:background="@null" />
            
        </RelativeLayout>
               

