<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".fragment.NewsFragment" 
    android:background="@drawable/background_airbus_sfumato">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="180dip"
        android:layout_marginRight="180dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Channels"
        android:textSize="30dip" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:padding="15dip"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:src="@drawable/cnn_icon"
        android:background="@null"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:padding="15dip"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:src="@drawable/eurosport_icon"
        android:background="@null"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:padding="15dip"
        android:layout_below="@+id/imageButton5"
        android:layout_alignParentRight="true"
        android:src="@drawable/ft_icon" 
        android:background="@null"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:padding="15dip"
        android:layout_below="@+id/imageButton6"
        android:layout_alignParentRight="true"
        android:src="@drawable/bbc_icon"
        android:background="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Your news"
        android:textSize="30dip" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/flipboardicon" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton1"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/googleedicolaicon" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_below="@+id/imageButton2"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/newsmeteoicon" />

</RelativeLayout>
